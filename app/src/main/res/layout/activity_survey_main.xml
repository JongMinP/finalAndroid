<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#33fb00ff"
    tools:context="com.example.kosta.beautymateandroid.survey.SurveyMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/surveyMainImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/bauman" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/checkfirst"
            android:textColor="#aefb00ff"
            android:textSize="23dp" />

        <TextView
            android:id="@+id/explanationForSurvey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="@string/explainbeforsurvey"
            android:textColor="#aefb00ff"
            android:textSize="17dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_toSurvey"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="#4cfb00ff"
        android:textColor="#ff00d5"
        android:text="설문 작성하기"/>

</LinearLayout>